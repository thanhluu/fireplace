// Styles for the categories index page.
@import 'lib';

.category-index {
    margin-top: 20px;
    text-align: center;
    width: 100%;

    a {
        display: inline-block;
        height: 90px;
        margin: 0 8px 20px;
        width: 90px;
    }
    .cat-icon {
        background-color: $faint-gray;
        border: 1px solid $light-gray;
        border-radius: 65px;
        color: $bg-gray;
        display: inline-block;
        height: 50px;
        position: relative;
        vertical-align: middle;
        width: 50px;

        &:before {
            background-size: 90px;
            display: inline-block;
            height: 30px;
            left: 5px;
            position: relative;
            top: unquote('calc(50% - 15px)');
            width: 30px;
        }
        p {
            color: $gray;
            font-size: 11px;
            position: relative;
            right: 40%;
            text-align: center;
            text-transform: uppercase;
            top: 25px;
            width: 180%;
        }
    }
}

.category-header-desktop {
    display: none;
}

.category-header {
    background: $note-gray;
    padding: 8px 0 6px;
    text-align: center;
    width: 100%;

    h3 {
        color: #fff;
    }
}

.desktop-cat-header {
    display: none;
}

@media $base-desktop {
    .category-header-desktop {
        margin: 0 auto 20px;
        width: $desktop-content;
    }
    .mobile-cat-header {
        display: none;
    }
    .desktop-cat-header {
        display: block;
    }
    .category-header {
        background: none;
        padding: 0;
        margin: 0 0 15px;
        text-align: left;
        width: auto;

        h3 {
            color: $castle-skull-gray;
            font-size: 30px;
            font-weight: 300;
            text-shadow: 0 1px 0 $barely-gray;

            &:before {
                background-size: 180px auto;
                height: 60px;
                width: 60px;
            }
        }
    }
}
