* {
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    //text-rendering: optimizeLegibility;
    word-wrap: break-word;
}

.js-hidden, .hidden {
    display: none;
}

.emaillink-wrapper {
    /* Necessary when emaillink is in a paragraph. */
    display: inline-block;
}

span.emaillink {
    direction: rtl;
    unicode-bidi: bidi-override;

    .i {
        display: none;
    }
}

noscript {
    background: $salt-flat-white;
    display: table;
    height: 100%;
    position: absolute;
    width: 100%;
    z-index: 100;

    p {
        background: url(../img/pretty/marketplace_logo.png) 50% 48% no-repeat;
        background-size: auto 60px;
        display: table-cell;
        font-weight: bold;
        height: 100%;
        padding-top: 60px;
        text-align: center;
        vertical-align: middle;
    }
}

a {
    text-decoration: none;
    color: $primary-blue;

    &:hover {
        text-decoration: underline;
    }
    &:not([href]) {
        cursor: pointer;
    }
}

body {
    background: $seavan-salt-white;
    color: $castle-skull-gray;
    // min-height needed so ff b2g/android can scroll to 0 (bug 872622).
    min-height: 300px;
    overflow-x: hidden;
    transform-origin: 50% 400px;
    transition: transform 1s;
    -webkit-transition: -webkit-transform 1s;
}

#site-header, #page {
    min-width: 320px;

    section.main {
        margin-left: auto;
        margin-right: auto;
        position: relative;

        &:after {
            content: '';
            display: block;
            clear: both;
        }
        &.full {
            width: 100%;

            > div {
                margin-left: auto;
                margin-right: auto;
            }
        }
    }
}

#page {
    position: relative;
}

.row {
    clear: both;
}

.detailed-error, .fragment-error {
    background: #fff;
}

.detailed-error {
    padding: 15px;
}

.fragment-error {
    display: block;
    padding: 15px;

    b {
        display: block;
    }
}

.main {
    margin: 0 auto;

    .fragment-error {
        padding: 0;
    }
}
#page > .overlay {
    max-width: 100%;
}

.two-up {
    width: 50%;
    float: left;

    &:nth-child(2n+1) {
        padding: 0 5px 0 0;
    }
    &:nth-child(2n) {
        padding: 0 0 0 5px;
    }
    .button {
        display: block;
    }
}

#site-footer,
.only-logged-in,
.logged-in .only-logged-out {
    display: none;
}

.only-logged-out,
.logged-in .only-logged-in {
    display: block;
}

.spinner {
    spinner();
    &.alt {
        spinner-alt-image();
    }
    &.btn-replace {
        spinner-abs();
        top: 24px;
    }
    &.spaced {
        margin: 70px auto;
    }
    &.padded {
        padding: 70px 0;
    }
}

@-webkit-keyframes spin {
    from { -webkit-transform: rotate(0turn); }
    to { -webkit-transform: rotate(1turn); }
}
@keyframes spin {
    from { transform: rotate(0turn); }
    to { transform: rotate(1turn); }
}

.roll {
    animation(unquote('0.9s spin 1 steps(30)'));
}

.hampster {
    background: url(../img/icons/eggs/h1.gif);

    #site-header {
        background: #fff url(../img/icons/eggs/h4.gif);
    }
}

.hide-on-mobile {
    display: none;
}

@media $base-desktop {
    .hide-on-desktop {
        display: none !important;
    }

    html, #footer {
        background: #fff;
    }

    #page {
        padding-top: 18px;
    }

    #footer {
        border-top: 1px solid $cloud-gray;
        padding: 48px 0;

        ul {
            list-style: none;
        }
    }

    #newsletter-footer {
        border-bottom: 1px solid $cloud-gray;
        border-top: 1px solid $cloud-gray;
    }

    #page .main,
    .main {
        max-width: $desktop-content;
    }

    .container {
        &.product-details,
        &.results {
            margin: 50px 0;
        }
        &.prose,
        &.form-grid {
            padding: 25px;
        }
    }

    #footzilla {
        background: url(../img/logos/footzilla.svg) no-repeat;
        float: left;

        a {
            display: block;
            height: 31px;
            hidetext();
            width: 115px;
        }
    }

    $primary-links-height = 55px;
    #footer {
        border-top: 1px solid $cloud-gray;
        color: $note-gray;
        overflow: hidden;
        padding: 20px 0;
        width: 100%;

        .pad {
            padding: 22px 0 0;
        }
        p, ul {
            line-height: 1.3;
            margin: 0;
            padding-left: 1em;
        }
        p {
            float: left;
            font-size: 16px;
            width: 60%;
        }
        ul:not(.primary-links) {
            float: right;
            font-size: 14px;
            line-height: 1.3;
            width: 20%;

            a {
                display: block;
            }
        }
        li + li {
            margin-top: 2px;
        }
        .pad,
        .primary-links {
            margin: 0 auto;
            width: $max-site-width;
        }
        .primary-links {
            border-bottom: 1px solid #e5e4e5;
            height: $primary-links-height;
            margin-top: -20px;
            padding: 0;
            text-align: center;

            li {
                display: inline-block;
                font-size: 17px;
                font-weight: 500;
                line-height: $primary-links-height;
                padding: 0 50px;
            }
        }
    }

    #site-footer {
        display: block;
    }
} // End of Desktop.

